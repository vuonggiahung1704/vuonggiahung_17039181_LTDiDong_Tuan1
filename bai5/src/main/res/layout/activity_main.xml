<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textView1"
        android:textSize="30dp"
        android:background="#fff0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin hóa đơn"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Tên khách hàng:"/>

    <EditText
        android:id="@+id/edtHoTen"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/textView2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập họ tên"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Số lượng sách:"/>

    <EditText
        android:id="@+id/edtSoLuong"
        android:layout_below="@+id/edtHoTen"
        android:layout_toRightOf="@+id/textView3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập số lượng"/>

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_marginLeft="150dp"
        android:layout_below="@+id/edtSoLuong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Khách hàng là VIP"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_below="@+id/checkbox"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Tổng tiền:"/>

    <TextView
        android:id="@+id/TongTien"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/checkbox"
        android:layout_toRightOf="@+id/textView5"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnTinhTT"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tính TT"/>

    <Button
        android:id="@+id/btnTiep"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/btnTinhTT"
        android:layout_below="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiếp"/>

    <Button
        android:id="@+id/btnThongKe"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/btnTiep"
        android:layout_below="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thống Kê"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_below="@+id/btnTinhTT"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:background="#fff0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin thống kê"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Tổng số KH:"/>

    <TextView
        android:id="@+id/TongKH"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/textView5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Tổng số KH là VIP:"/>

    <TextView
        android:id="@+id/VIP"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/TongKH"
        android:layout_toRightOf="@+id/textView6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Tổng doanh thu:"/>

    <TextView
        android:id="@+id/DoanhThu"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/VIP"
        android:layout_toRightOf="@+id/textView6"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/sv"
        android:layout_below="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView8"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="30dp"
                android:background="#29e7a8"
                android:textColor="#fcfcf8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chương trình tính tiền bán sách online"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_below="@+id/textView8"
                android:layout_marginLeft="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Tên khách hàng:"/>

            <TextView
                android:id="@+id/TTTen"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/textView8"
                android:layout_toRightOf="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView10"
                android:layout_below="@+id/textView9"
                android:layout_marginLeft="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Số lượng:"/>

            <TextView
                android:id="@+id/TTSoLuong"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/textView9"
                android:layout_toRightOf="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView11"
                android:layout_below="@+id/textView10"
                android:layout_marginLeft="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Tổng tiền:"/>

            <TextView
                android:id="@+id/TTTongTien"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/textView10"
                android:layout_toRightOf="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnEnd"
                android:layout_below="@+id/TTTongTien"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff00"
                android:text="Thoát"/>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>